/* component/navbarscroll/navbarscroll.wxss */


.title-img{
  margin-top:34rpx;
}
.scroll-box{
  margin-bottom: 20rpx;
}
.title-img image{
  width: 100%;
  height: 300rpx;
}
.scroll-view-box{
  height: 430rpx;
  padding:23rpx 0;
  width: 100%;
}


.scroll-view-item{
  background: #fff;
  box-shadow: #f1f1f1 4rpx 4rpx 20rpx 1rpx;
  border-radius: 25rpx;
  box-sizing: border-box;
  display: inline-block;
  width: 315rpx;
  height: 421rpx;
  margin-left: 27rpx;
  padding: 54rpx 40rpx 0;
}
.commodity-box{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.commodity-box text{
  margin-top: 28rpx;
  width: 100%;
  font-size: 28rpx;
  font-weight: 500;
}
.price{
  font-size: 26rpx;
  color: #999999;                                         
  padding-top:47rpx;
}
.price text{
  color: #cc2826;
  font-size:30rpx; 
}

.scroll-view-item .commodity-box image{
  width: 222rpx;
  height: 200rpx;
}